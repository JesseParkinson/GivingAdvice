<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.informedgift.givingadvice" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".GiftListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GiftDetailActivity"
            android:label="@string/title_gift_detail"
            android:parentActivityName=".GiftListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GiftListActivity" />
        </activity>
    </application>

</manifest>
